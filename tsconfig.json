{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test", "node"],
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "**/*.ts"]
}
